<div class="container-fluid mt-5 about-style" id="contactid">
<div class="row">
  <div class="col-md-10 col-12 mx-auto">
     <h1 class="text-center main-heading">Contact Us</h1>
     <p class="text-center sub-heading">Grow With Us.</p>
      <div class="row">
         <div class="col-md-6 col-12 mx-auto">
<form action="/contact" method="post">
  <div class="form-group">
    <div class="form-group">
                <label for="nameInput" class="form-label">Name</label>
                <input type="text" class="form-control" id="nameInput" name="name">
            </div>
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="form-group">
                <label for="phoneInput" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phoneInput" name="phone">
            </div>
            <div class="form-group">
                <label for="messageInput" class="form-label">Message</label>
                <textarea class="form-control" id="messageInput" rows="1" name="message"></textarea>
            </div>
  <button type="submit" class="btn-style btn-primary mt-2">Submit</button>
</form>
  </div>
</div>
  </div>
</div>
</div>